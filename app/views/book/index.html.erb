<div class="d-flex flex-column align-items-center">
  <strong style="font-size: 18px; margin: 10px auto"><%= t('books.all-books') %></strong>
  <table class="table table-striped w-10 table-hover" style="width: 55rem">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t('form.name') %></th>
      <th scope="col"><%= t('form.order-date') %></th>
      <th scope="col"><%= t('form.issue-date') %></th>
      <th scope="col"><%= t('form.taken-by-student') %></th>
      <th scope="col"><%= t('form.edit') %></th>
      <th scope="col"><%= t('form.delete') %></th>
    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.name %></td>
        <td><%= book.order_date %></td>
        <td><%= book.issue_date %></td>
        <td><%= book.student.to_s %></td>
        <td class="link-style-edit">
          <%= button_to 'Edit', edit_book_path(book), :method => :get, :class => "btn btn-primary" %>
        </td>
        <td class="link-style-delete">
          <%= button_to 'Delete', book_path(book), :method => :delete, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <button type="button" class="btn btn-success link-style-create" style="margin-top: 50px">
    <%= link_to 'Create book', "/book/new" %>
  </button>
</div>
