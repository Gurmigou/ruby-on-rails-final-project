<form class="d-flex flex-column" style="width: 30rem; margin: 0 auto" action="/book" method="POST">
  <strong style="font-size: 18px; text-align: center; margin: 15px 0">Create new book</strong>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" class="form-control" name="name" id="name">
  </div>
  <div class="mb-3">
    <label for="order_date" class="form-label">Order date</label>
    <input type="text" class="form-control" name="order_date" id="order_date">
  </div>
  <div class="mb-3">
    <label for="issue_date" class="form-label">Issue date</label>
    <input type="text" class="form-control" name="issue_date" id="issue_date">
  </div>
  <div class="mb-3">
    <label for="student_id" class="form-label">Student</label>
    <input type="text" class="form-control" name="student_id" id="student_id">
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>
