<form class="d-flex flex-column" style="width: 30rem; margin: 0 auto" action="<%=  "/student/#{@student.id}" %>" name="_method" method="PUT">
  <strong style="font-size: 18px; text-align: center; margin: 15px 0"><%= "Edit student with id  #{@student.id}" %></strong>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" placeholder="<%= @student.name %>" class="form-control" name="name" id="name">
  </div>
  <div class="mb-3">
    <label for="surname" class="form-label">Surname</label>
    <input type="text" placeholder="<%= @student.surname %>" class="form-control" name="surname" id="surname">
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>