<form class="d-flex flex-column" style="width: 30rem; margin: 0 auto" action="/student" method="POST">
  <strong style="font-size: 18px; text-align: center; margin: 15px 0"><%= t('students.create') %></strong>
  <div class="mb-3">
    <label for="name" class="form-label"><%= t('form.name') %></label>
    <input type="text" class="form-control" name="name" id="name">
  </div>
  <div class="mb-3">
    <label for="surname" class="form-label"><%= t('form.surname') %></label>
    <input type="text" class="form-control" name="surname" id="surname">
  </div>
  <button type="submit" class="btn btn-primary"><%= t('form.create') %></button>
</form>